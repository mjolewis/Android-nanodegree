<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Movie detail title styles -->
    <style name="AppTheme.DetailTitle" parent="@style/TextAppearance.AppCompat.Display2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_detail_vertical_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">@dimen/horizontal_padding</item>
    </style>

</resources>
